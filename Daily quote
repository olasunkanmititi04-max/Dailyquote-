  <script>
    const quotes = [
      "Believe in yourself and all that you are.",
      "Every day is a second chance.",
      "Dream it. Wish it. Do it.",
      "Stay positive, work hard, make it happen.",
      "Your only limit is your mind.",
      "Small steps every day lead to big results.",
      "Happiness depends upon ourselves.",
      "Success doesnâ€™t come from what you do occasionally, but from what you do consistently."
    ];

    function dailyQuote() {
      // One fixed quote for the day
      const today = new Date();
      const index = today.getDate() % quotes.length;
      document.getElementById("quote").innerText = quotes[index];
    }

    function newQuote() {
      // Random quote every time button is clicked
      const randomIndex = Math.floor(Math.random() * quotes.length);
      document.getElementById("quote").innerText = quotes[randomIndex];
    }

    // Load daily quote when page starts
    window.onload = dailyQuote;
  </script>
